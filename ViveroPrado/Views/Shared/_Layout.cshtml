<!DOCTYPE html>
<html lang="en">
<head>
    
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - ViveroPrado</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Estilo general para todo el body con la fuente Roboto y un color de fondo claro */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
        }

        /* Estilos personalizados para la barra de navegación (navbar) */
        .navbar {
            background-color: #005236; /* Color de fondo verde oscuro */
        }

        /* Estilo para los enlaces del menú en la navbar */
        .navbar-brand, .navbar-nav .nav-link {
            color: white !important; /* Colorea los enlaces en blanco */
        }

         /* Cambio de color cuando se pasa el ratón sobre los enlaces del menú */
        .navbar-nav .nav-link:hover {
                color: #008b55 !important; /* Cambia a un verde más claro al hacer hover */
        }

        /* Añade margen entre los elementos del menú para separarlos un poco */
        .navbar-nav .nav-item {
            margin-left: 10px;
        }

        /* Estilos para el pie de página */
        footer {
            background-color: #005236; /* Fondo verde oscuro */
            color: white; /* Texto blanco */
            padding: 10px; /* Espaciado dentro del footer */
        }

        /* Estilos para la sección principal de la página con una imagen de fondo */
        .hero-section {
            background-image: url('/imagenes/Fondito12.jpg'); /* Imagen de fondo  */ background-size: cover; /* La imagen de fondo cubre toda la sección */
            background-position: center; /* Centra la imagen de fondo */
            height: 400px; /* Altura de la sección */
            color: white; /* Texto en blanco */
            display: flex; /* Flexbox para centrar el contenido */
            justify-content: center; /* Centra horizontalmente el contenido */
            align-items: center; /* Centra verticalmente el contenido */
            text-align: center; /* Alinea el texto en el centro */
        }

            /* Tamaño y estilo del encabezado dentro de la sección 'hero' */
            .hero-section h1 {
                font-size: 3rem; /* Tamaño grande del texto */
                font-weight: bold; /* Texto en negrita */
            }

        /* Margen superior para contenedores dentro de la página */
        .container {
            margin-top: 20px;
        }

        /* Estilo para los botones de la clase .btn-primary */
        .btn-primary {
            background-color: #008b55; /* Verde medio */
            border-color: #008b55; /* Borde del mismo color */
        }

            /* Cambia el color de los botones al pasar el ratón por encima */
            .btn-primary:hover {
                background-color: #00693c; /* Verde más oscuro */
                border-color: #00693c; /* Borde verde más oscuro */
            }

        /* Estilos para los íconos de redes sociales */
        .social-icons a {
            color: #008b55; 
            margin: 0 10px; 
        }

            /* Cambia el color de los íconos al pasar el ratón por encima */
            .social-icons a:hover {
                color: #00693c; /* Verde más oscuro cuando se hace hover */
            }

        /* Estilos para alinear los botones de inicio de sesión y registro juntos */
        .login-buttons {
            display: flex; 
            gap: 10px; 
            margin-top: 20px; 
            justify-content: center; 
        }
    </style>
</head>

<body>
    <!-- Cabecera con la barra de navegación (navbar) -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <!-- Logo que enlaza a la página de inicio (Home) -->
                <img src="/imagenes/Plantita.png" alt="Logo del Vivero" width="50" height="50">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Vivero Prado</a>

                <!-- Botón colapsable para pantallas pequeñas -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Elementos dentro de la barra de navegación -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <!-- Enlaces de la barra de navegación, dirigidos a acciones y controladores en ASP.NET -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vivero" asp-action="Productos">Ver Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Vivero" asp-action="EdicionProducto">Editar Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="DetalleCliente">Ver Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="EditarCliente">Editar Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Factura" asp-action="Venta">Facturas</a>
                        </li>
                    </ul>

                    <!-- parte derecha de la barra de navegación -->
                    <ul class="navbar-nav ms-auto">
                        @* @if (user.identity.isauthenticated)
                        {
                            <!-- botón de "cerrar sesión" si el usuario está autenticado -->
                            <li class="nav-item">
                                <a class="btn btn-danger me-2" href="@url.action("cerrarsesion", "home")">cerrar sesión</a>
                            </li>
                        }
                        else
                        {
                            <!-- botón de "iniciar sesión" si el usuario no está autenticado -->
                            <li class="nav-item">
                                <a class="btn btn-primary me-2" href="@url.action("login", "home")">iniciar sesión</a>
                            </li>
                        } *@

                        <li class="nav-item">
                            <a class="btn btn-primary me-2" asp-area="" asp-controller="Home" asp-action="Login">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary me-2" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar Sesión</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary me-2" asp-area="" asp-controller="Home" asp-action="Registro">Registrarse</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sección con la imagen y el mensaje de bienvenida -->
    <div class="hero-section">
        <h1>Bienvenido a Vivero Prado</h1>
    </div>

    <!-- Contenido principal de la página -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Lugar donde se inserta el contenido de la vista -->
        </main>
    </div>

    <!-- Pie de página (footer) -->
    <footer class="border-top footer">
        <div class="container text-center">
            <p>&copy; 2023 - ViveroPrado</p>
            <!-- Íconos de redes sociales usando FontAwesome -->
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-whatsapp"></i></a>
            </div>
        </div>
    </footer>

    <!-- Enlaces a los scripts de jQuery y Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



